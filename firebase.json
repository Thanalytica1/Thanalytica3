{
  "hosting": {
    "public": "dist/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "runtime": "nodejs20",
    "timeoutSeconds": 60
  },
  "emulators": {
    "ui": { "enabled": true, "port": 4040 },
    "hosting": { "port": 5050 },
    "functions": { "port": 5001 },
    "auth": { "port": 9099 },
    "firestore": { "port": 8080 }
  }
}